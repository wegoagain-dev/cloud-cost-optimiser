# ============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================================================
# Learning: Never commit .env files to Git!
# Copy this to .env and fill in your values

# =============================================================================
# AWS CREDENTIALS
# =============================================================================
# Learning: These are passed to the backend container
# Option 1: Use AWS IAM credentials
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_DEFAULT_REGION=eu-west-2

# Option 2: Use AWS profile (if you have ~/.aws/credentials configured)
AWS_PROFILE=cost-optimiser

# =============================================================================
# DATABASE
# =============================================================================
# Learning: These match the postgres service in docker-compose.yml
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cost_optimiser
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/cost_optimiser

# =============================================================================
# BACKEND API
# =============================================================================
# Learning: Port the backend listens on
BACKEND_PORT=8000

# =============================================================================
# FRONTEND
# =============================================================================
# Learning: URL where frontend can reach the backend
VITE_API_URL=http://localhost:8000

# Frontend port
FRONTEND_PORT=3000
